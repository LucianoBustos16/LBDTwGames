---
export interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
}

const { href, title, body, image } = Astro.props;
---

<li class="flex dark:bg-slate-800 rounded-lg shadow overflow-hidden">
	<a href={href}>
		<img src={image} alt={title} class=" w-full">
		<div class=" p-2">
			<h2 class="text-xl">
				{title}
			</h2>
			<p>
				{body}
			</p>

		</div>
	</a>
</li>
