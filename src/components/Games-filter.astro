---


<div class="p-2 md:p-20 shadow-md rounded">
    <section class="grid grid-cols-3 md:grid-cols-2 xl:grid-cols-5 gap-2 md:gap-8">

        {
            platform.map(({ name, href, color, logo }) => (

            <div class={`col-span-1 transition rounded aspect-video`} style={`background-color:${color}`}>
                <a href={href} class=" group transition hover:scale-100 flex h-full items-center justify-center relative ">
                    <h3 class=" hidden md:block font-black text-3xl">{name}</h3>
                    <div 
                    class={`absolute inset-0 opacity-5  bg-center bg-[size:50%] brightness-[100] bg-no-repeat group-hover:bg-[size:75%] transition-all`}
                    style={`background-image:url('${logo}')`}
                    >
                    </div>
                </a>
            </div>
            ))
        }
    </section>
</div>
