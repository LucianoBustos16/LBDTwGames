	},
	{
		name: 'Epic Games',
        color: '#2f2d2e',
        logo: 'src/assets/images/epic.svg',
		href: '/epic-store'
	},
	{
		name: 'GOG',
        color: '#de8ae5',
        logo: 'src/assets/images/gog.svg',
		href: '/gog'
	},
	{
		name: 'Xbox One',
        color: '#52b043',
        logo: 'src/assets/images/xbox.svg',
		href: '/xbox-one'
	},
	{
		name: 'PS4',
        color: '#003087',
